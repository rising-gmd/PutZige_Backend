{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "LoggingSettings": {
    "Environment": "Production",
    "EnableSeq": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "PutZige": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/prod/log-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "fileSizeLimitBytes": 104857600,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "Database": {
    "ConnectionString": "Server=prod-server;Database=PutZige_Prod;User Id=prod;Password=prod;",
    "EnableSensitiveDataLogging": false,
    "CommandTimeout": 60
  },
  "RateLimiting": {
    "MaxRequestsPerMinute": 30
  }
}
