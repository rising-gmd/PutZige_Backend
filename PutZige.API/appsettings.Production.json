{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "LoggingSettings": {
    "Environment": "Development",
    "EnableSeq": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dev/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }

    ]
  },
  "DatabaseSettings": {
    "ConnectionString": "Server=localhost;Database=PutZigeDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "HashingSettings": {
    "SaltSizeBytes": 32,
    "Algorithm": "SHA512",
    "Iterations": 100000
  },
  "RateLimitSettings": {
    "Enabled": true,
    "GlobalApi": {
      "PermitLimit": 1000,
      "WindowSeconds": 60,
      "SegmentsPerWindow": 8
    },
    "Login": {
      "PermitLimit": 5,
      "WindowSeconds": 900
    },
    "RefreshToken": {
      "PermitLimit": 10,
      "WindowSeconds": 900
    },
    "Registration": {
      "PermitLimit": 3,
      "WindowSeconds": 3600
    },
    "UseDistributedCache": false,
    "RedisConnectionString": null
  }
  ,
  "CorsSettings": {
    "PolicyName": "Default",
    "AllowedOrigins": [ "https://app.putzige.com", "https://admin.putzige.com" ],
    "AllowedHeaders": [ "Content-Type", "Authorization", "X-Requested-With" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowCredentials": false,
    "PreflightMaxAgeSeconds": 1800
  }
}
