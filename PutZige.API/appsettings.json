{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "LoggingSettings": {
    "ApplicationName": "PutZige",
    "Environment": "Development",
    "EnableSeq": true,
    "SeqUrl": "http://localhost:5341"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dev/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "ConnectionString": "Server=localhost;Database=PutZigeDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "HashingSettings": {
    "SaltSizeBytes": 32,
    "Algorithm": "SHA512",
    "Iterations": 100000
  },
  "Authentication": {
    "TokenExpirationMinutes": 60,
    "EmailVerificationTokenExpirationHours": 24,
    "PasswordResetTokenExpirationHours": 1,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "RateLimiting": {
    "MaxRequestsPerMinute": 60,
    "MaxRegistrationsPerDay": 10
  },
  "Email": {
    "FromAddress": "noreply@putzige.com",
    "FromName": "PutZige Team"
  },
  "JwtSettings": {
    "Secret": "ThisIsADevelopmentSecretKeyWithAtLeast32Chars!",
    "Issuer": "PutZige",
    "Audience": "PutZige.Users",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "RateLimitSettings": {
    "Enabled": true,
    "GlobalApi": {
      "PermitLimit": 1000,
      "WindowSeconds": 60,
      "SegmentsPerWindow": 8
    },
    "Login": {
      "PermitLimit": 5,
      "WindowSeconds": 900
    },
    "RefreshToken": {
      "PermitLimit": 10,
      "WindowSeconds": 900
    },
    "Registration": {
      "PermitLimit": 3,
      "WindowSeconds": 3600
    },
    "UseDistributedCache": false,
    "RedisConnectionString": null
  }
}
