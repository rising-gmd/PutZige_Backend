{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "LoggingSettings": {
    "Environment": "Development",
    "EnableSeq": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dev/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
  ,
  "SignalRSettings": {
    "EnableRedis": false,
    "RedisConnectionString": null,
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutSeconds": 30,
    "HandshakeTimeoutSeconds": 15
  }
      }

    ]
  },
  "DatabaseSettings": {
    "ConnectionString": "Server=localhost;Database=PutZigeDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "HashingSettings": {
    "SaltSizeBytes": 32,
    "Algorithm": "SHA512",
    "Iterations": 100000
  },
  "RateLimitSettings": {
    "Enabled": true,
    "GlobalApi": {
      "PermitLimit": 10000,
      "WindowSeconds": 60,
      "SegmentsPerWindow": 8
    },
    "Login": {
      "PermitLimit": 2,
      "WindowSeconds": 60
    },
    "RefreshToken": {
      "PermitLimit": 1000,
      "WindowSeconds": 60
    },
    "Registration": {
      "PermitLimit": 100,
      "WindowSeconds": 60
    }
  },
  "CorsSettings": {
    "PolicyName": "Default",
    "AllowedOrigins": [ "http://localhost:4200" ],
    "AllowedHeaders": [ "*" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowCredentials": true,
    "PreflightMaxAgeSeconds": 600
  }
  ,
  "EmailSettings": {
    "SmtpHost": "smtp.sendgrid.net",
    "SmtpPort": 587,
    "SmtpUsername": "apikey",
    "SmtpPassword": "",
    "FromEmail": "noreply@putzige.com",
    "FromName": "PutZige",
    "EnableSsl": true,
    "VerificationLinkBaseUrl": "https://localhost:4200/verify-email"
  }
}
